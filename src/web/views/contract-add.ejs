    <script>
        layui.use(['form','layer'], function(){
            $ = layui.jquery;
          var form = layui.form
          ,layer = layui.layer;
        
          //监听提交
          form.on('submit(add)', function(data){
              if (!$('#username', parent.document).text()){
                  layer.tips('请先登录','#commit');
                  return false;
              }
            $.post('/contract/add', data.field, function (res){
                layer.alert(res, {icon: 6},function (index) {
                    layer.close(index);
                });
            });
          });
          
          
        });
    </script>
